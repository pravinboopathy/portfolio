---
import Layout from './Layout.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  date: Date;
  tags: string[];
}

const { title, description, date, tags } = Astro.props;

// Calculate reading time (rough estimate: 200 words per minute)
const content = await Astro.slots.render('default');
const wordCount = content.split(/\s+/).length;
const readingTime = Math.ceil(wordCount / 200);

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Layout title={`${title} - Blog`} description={description}>
  <article class="blog-post">
    <!-- Back link -->
    <a href="/blog" class="back-link">
      ← Back to Blog
    </a>

    <!-- Header -->
    <header class="post-header">
      <h1 class="post-title">{title}</h1>

      <div class="post-meta">
        <time datetime={date.toISOString()}>{formattedDate}</time>
        <span class="separator">·</span>
        <span>{readingTime} min read</span>
      </div>

      {tags.length > 0 && (
        <div class="post-tags">
          {tags.map((tag) => (
            <span class="tag">#{tag}</span>
          ))}
        </div>
      )}
    </header>

    <!-- Content -->
    <div class="prose">
      <slot />
    </div>
  </article>

  <Footer />
</Layout>

<style>
  .blog-post {
    max-width: 750px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 3rem;
    font-size: 1rem;
  }

  .post-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-default);
  }

  .post-title {
    font-size: 2.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
  }

  .post-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1rem;
    color: var(--text-secondary);
  }

  .post-meta .separator {
    color: var(--text-muted);
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 1.5rem;
  }

  .tag {
    font-size: 0.9375rem;
    padding: 0.375rem 0.875rem;
    background: var(--bg-secondary);
    border-radius: 4px;
    color: var(--text-secondary);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-post {
      padding: 2rem 1.5rem;
    }

    .post-title {
      font-size: 2rem;
    }

    .back-link {
      margin-bottom: 2rem;
    }
  }
</style>

<style is:global>
  /* Prose styling for markdown content */
  .prose {
    color: var(--text-secondary);
    font-size: 1.125rem;
    line-height: 1.8;
  }

  .prose > * {
    margin-bottom: 1.5rem;
  }

  .prose > *:last-child {
    margin-bottom: 0;
  }

  /* Headings */
  .prose h2 {
    font-size: 2rem;
    font-weight: 700;
    margin-top: 3.5rem;
    margin-bottom: 1.25rem;
    color: var(--text-primary);
    line-height: 1.3;
  }

  .prose h3 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
    line-height: 1.4;
  }

  .prose h4 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }

  /* Paragraphs */
  .prose p {
    line-height: 1.8;
  }

  /* Links */
  .prose a {
    color: var(--accent-primary);
    text-decoration: underline;
    text-decoration-color: var(--accent-primary);
    text-underline-offset: 4px;
  }

  .prose a:hover {
    color: var(--accent-hover);
    text-decoration-color: var(--accent-hover);
  }

  /* Lists */
  .prose ul,
  .prose ol {
    margin-left: 2rem;
    line-height: 1.8;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  .prose li::marker {
    color: var(--accent-primary);
  }

  /* Code */
  .prose code {
    background-color: var(--bg-dark);
    color: var(--text-secondary);
    padding: 0.2rem 0.5rem;
    border-radius: 4px;
    font-size: 0.95em;
    font-family: 'Courier New', monospace;
  }

  .prose pre {
    background-color: var(--bg-dark);
    padding: 1.5rem;
    border-radius: 4px;
    overflow-x: auto;
    border: 1px solid var(--border-default);
  }

  .prose pre code {
    background-color: transparent;
    padding: 0;
  }

  /* Blockquotes */
  .prose blockquote {
    border-left: 4px solid var(--accent-primary);
    padding-left: 1.5rem;
    font-style: italic;
    color: var(--text-secondary);
  }

  /* Images */
  .prose img {
    border-radius: 4px;
    margin: 2rem 0;
    border: 1px solid var(--border-default);
  }

  /* Horizontal Rule */
  .prose hr {
    margin: 3rem 0;
    border: 0;
    border-top: 1px solid var(--border-default);
  }

  /* Tables */
  .prose table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
  }

  .prose th,
  .prose td {
    border: 1px solid var(--border-default);
    padding: 0.75rem;
    text-align: left;
  }

  .prose th {
    background: var(--bg-secondary);
    font-weight: 700;
    color: var(--text-primary);
  }
</style>
