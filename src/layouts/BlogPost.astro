---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
  date: Date;
  tags: string[];
}

const { title, description, date, tags } = Astro.props;

// Calculate reading time (rough estimate: 200 words per minute)
const content = await Astro.slots.render('default');
const wordCount = content.split(/\s+/).length;
const readingTime = Math.ceil(wordCount / 200);

const formattedDate = date.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Layout title={`${title} - Blog`} description={description}>
  <div class="min-h-screen flex flex-col">
    <Header />

    <main class="flex-1">
      <article class="max-w-3xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <!-- Back link -->
        <a href="/blog" class="inline-flex items-center gap-2 text-blue-500 hover:text-blue-600 dark:hover:text-blue-400 mb-8">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to Blog
        </a>

        <!-- Header -->
        <header class="mb-8">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">{title}</h1>

          <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 dark:text-gray-400">
            <time datetime={date.toISOString()}>{formattedDate}</time>
            <span>â€¢</span>
            <span>{readingTime} min read</span>
          </div>

          {tags.length > 0 && (
            <div class="flex flex-wrap gap-2 mt-4">
              {tags.map((tag) => (
                <span class="px-3 py-1 text-sm bg-gray-100 dark:bg-gray-800 rounded-full">
                  #{tag}
                </span>
              ))}
            </div>
          )}
        </header>

        <!-- Content -->
        <div class="prose prose-lg dark:prose-invert max-w-none">
          <slot />
        </div>
      </article>
    </main>

    <Footer />
  </div>
</Layout>

<style is:global>
  .prose {
    color: rgb(31 41 55);
    line-height: 1.75;
  }

  .dark .prose {
    color: rgb(229 231 235);
  }

  .prose h2 {
    font-size: 1.5rem;
    font-weight: 700;
    margin-top: 3rem;
    margin-bottom: 1rem;
  }

  @media (min-width: 768px) {
    .prose h2 {
      font-size: 1.875rem;
    }
  }

  .prose h3 {
    font-size: 1.25rem;
    font-weight: 700;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  @media (min-width: 768px) {
    .prose h3 {
      font-size: 1.5rem;
    }
  }

  .prose h4 {
    font-size: 1.125rem;
    font-weight: 700;
    margin-top: 1.5rem;
    margin-bottom: 0.5rem;
  }

  @media (min-width: 768px) {
    .prose h4 {
      font-size: 1.25rem;
    }
  }

  .prose p {
    margin-bottom: 1rem;
    line-height: 1.75;
  }

  .prose a {
    color: rgb(59 130 246);
    text-decoration: underline;
  }

  .prose a:hover {
    color: rgb(37 99 235);
  }

  .dark .prose a {
    color: rgb(96 165 250);
  }

  .dark .prose a:hover {
    color: rgb(147 197 253);
  }

  .prose ul,
  .prose ol {
    margin-bottom: 1rem;
    margin-left: 1.5rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  .prose code {
    background-color: rgb(243 244 246);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    font-size: 0.875rem;
  }

  .dark .prose code {
    background-color: rgb(31 41 55);
  }

  .prose pre {
    background-color: rgb(243 244 246);
    padding: 1rem;
    border-radius: 0.5rem;
    overflow-x: auto;
    margin-bottom: 1rem;
  }

  .dark .prose pre {
    background-color: rgb(31 41 55);
  }

  .prose pre code {
    background-color: transparent;
    padding: 0;
  }

  .prose blockquote {
    border-left: 4px solid rgb(59 130 246);
    padding-left: 1rem;
    font-style: italic;
    margin: 1rem 0;
  }

  .prose img {
    border-radius: 0.5rem;
    margin: 1.5rem 0;
  }

  .prose hr {
    margin: 2rem 0;
    border-color: rgb(229 231 235);
  }

  .dark .prose hr {
    border-color: rgb(31 41 55);
  }
</style>
