---
import '../styles/global.css';
import ThemeProvider from '../components/ThemeProvider.astro';
import FontProvider from '../components/FontProvider.astro';
import Sidebar from '../components/Sidebar.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Personal portfolio showcasing programming projects and blog posts' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Social Media -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />

    <title>{title}</title>

    <!-- Theme configuration -->
    <ThemeProvider />
    <!-- Font configuration -->
    <FontProvider />
  </head>
  <body>
    <Sidebar />
    <main class="main-content">
      <slot />
    </main>
  </body>
</html>

<style>
  /* Main content area - offset for sidebar/tab bar */
  .main-content {
    margin-left: 0;
    margin-bottom: 0;
    min-height: 100vh;
    transition: margin-left 0.3s ease, margin-bottom 0.3s ease;
  }

  /* Desktop: offset for fixed sidebar */
  @media (min-width: 768px) {
    .main-content {
      margin-left: 220px;
    }
  }

  /* Mobile: offset for fixed bottom tab bar */
  @media (max-width: 767px) {
    .main-content {
      margin-bottom: 60px;
    }
  }
</style>
