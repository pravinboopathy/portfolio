---
/**
 * Vertical Sidebar Navigation
 *
 * Desktop: Fixed left sidebar
 * Mobile: Collapsible hamburger menu
 */
import config from '../../config.json';
const blogEnabled = config.features?.blog ?? false;

// Get the base path from Astro config
const baseUrl = import.meta.env.BASE_URL || '/';
---

<div class="sidebar-container">
  <!-- Desktop Sidebar Navigation -->
  <nav id="sidebar" class="sidebar">
    <div class="sidebar-content">
      <!-- Navigation Links -->
      <ul class="nav-list">
        <li>
          <a href={baseUrl} class="nav-link">About</a>
        </li>
        <li>
          <a href={`${baseUrl}#projects`} class="nav-link">Projects</a>
        </li>
        {blogEnabled && (
          <li>
            <a href={`${baseUrl}blog`} class="nav-link">Blog</a>
          </li>
        )}
        <li>
          <a href={`${baseUrl}#contact`} class="nav-link">Contact</a>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Mobile Bottom Tab Bar -->
  <nav id="bottom-nav" class="bottom-nav">
    <ul class="nav-list">
      <li>
        <a href={baseUrl} class="nav-link">About</a>
      </li>
      <li>
        <a href={`${baseUrl}#projects`} class="nav-link">Projects</a>
      </li>
      {blogEnabled && (
        <li>
          <a href={`${baseUrl}blog`} class="nav-link">Blog</a>
        </li>
      )}
      <li>
        <a href={`${baseUrl}#contact`} class="nav-link">Contact</a>
      </li>
    </ul>
  </nav>
</div>

<style>
  /* Container */
  .sidebar-container {
    position: relative;
  }

  /* Sidebar (Desktop only) */
  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    width: 220px;
    background: var(--bg-primary);
    border-right: 1px solid var(--border-default);
    z-index: 999;
    display: flex;
    flex-direction: column;
    transition: transform 0.3s ease;
  }

  @media (max-width: 767px) {
    .sidebar {
      display: none;
    }
  }

  /* Sidebar Content */
  .sidebar-content {
    padding: 2rem 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  /* Navigation List */
  .nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  /* Desktop sidebar nav list styling */
  .sidebar .nav-list {
    flex-direction: column;
    gap: 1.5rem;
  }

  .nav-link {
    font-size: 1.125rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: color 0.2s ease, padding-left 0.2s ease;
    display: block;
    padding-left: 0;
  }

  .nav-link:hover {
    color: var(--accent-primary);
    text-decoration: none;
    padding-left: 0.5rem;
  }

  /* Bottom Navigation (Mobile only) */
  .bottom-nav {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: var(--bg-primary);
    border-top: 1px solid var(--border-default);
    z-index: 999;
    display: none;
  }

  @media (max-width: 767px) {
    .bottom-nav {
      display: block;
    }

    .bottom-nav .nav-list {
      flex-direction: row;
      gap: 0;
      padding: 0.5rem 0;
    }

    .bottom-nav .nav-link {
      flex: 1;
      text-align: center;
      font-size: 0.875rem;
      padding: 0.75rem 0.5rem;
    }
  }
</style>


