---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects'))
  .filter((project) => !project.data.draft)
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, 6); // Show top 6 projects on homepage
---

<Layout title="Pravin Boopathy">
  <div class="page-container">
    <!-- About Section -->
    <section class="section first-section">
      <h2 class="section-title">About</h2>
      <div class="about-content">
        <p>
          I'm a passionate software engineer who loves building things and solving problems.
          My interests span across web development, system design, and exploring new technologies.
        </p>
        <p>
          When I'm not coding, you'll find me learning about new frameworks, contributing to
          open source, or writing about my experiences on this blog.
        </p>
        <p>
          I'm always open to interesting conversations and collaboration opportunities. Feel
          free to reach out!
        </p>
      </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="section">
      <h2 class="section-title">Projects</h2>
      <p class="section-subtitle">A selection of side projects I've been working on</p>

      {projects.length > 0 ? (
        <div class="projects-grid">
          {projects.map((project) => (
            <article class="project-card">
              {project.data.image && (
                <img
                  src={project.data.image}
                  alt={project.data.title}
                  class="project-image"
                />
              )}
              <h3 class="project-title">{project.data.title}</h3>
              <p class="project-description">
                {project.data.description}
              </p>

              <!-- Tech Stack -->
              <div class="tech-stack">
                {project.data.tech.map((tech: string) => (
                  <span class="tech-tag">{tech}</span>
                ))}
              </div>

              <!-- Links -->
              <div class="project-links">
                {project.data.demoUrl && (
                  <a
                    href={project.data.demoUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    Demo →
                  </a>
                )}
                {project.data.githubUrl && (
                  <a
                    href={project.data.githubUrl}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    GitHub →
                  </a>
                )}
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="empty-state">
          <p>
            No projects yet. Add your first project in <code>src/content/projects/</code>
          </p>
        </div>
      )}
    </section>

    <!-- Contact Section -->
    <section id="contact" class="section">
      <h2 class="section-title">Let's Connect</h2>
      <p class="section-subtitle">
        I'm always interested in hearing about new opportunities, collaborations,
        or just having a chat about technology.
      </p>
      <a href="mailto:your.email@example.com" class="contact-link">
        Send me an email →
      </a>
    </section>

    <Footer />
  </div>
</Layout>

<style>
  .page-container {
    max-width: 900px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  /* Section Styles */
  .section {
    padding: 4rem 0;
    border-top: 1px solid var(--border-default);
  }

  .section.first-section {
    border-top: none;
    padding-top: 2rem;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .section-subtitle {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: 3rem;
  }

  /* About Section */
  .about-content {
    max-width: 700px;
  }

  .about-content p {
    margin-bottom: 1.5rem;
    color: var(--text-secondary);
  }

  .about-content p:last-child {
    margin-bottom: 0;
  }

  /* Projects Grid */
  .projects-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 640px) {
    .projects-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .project-card {
    border: 1px solid var(--border-default);
    padding: 1.5rem;
    border-radius: 4px;
    transition: border-color 0.2s ease;
  }

  .project-card:hover {
    border-color: var(--accent-primary);
  }

  .project-image {
    width: 100%;
    height: 12rem;
    object-fit: cover;
    border-radius: 4px;
    margin-bottom: 1rem;
  }

  .project-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }

  .project-description {
    color: var(--text-secondary);
    margin-bottom: 1rem;
    line-height: 1.6;
  }

  .tech-stack {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .tech-tag {
    font-size: 0.875rem;
    padding: 0.25rem 0.75rem;
    background: var(--bg-secondary);
    border-radius: 4px;
    color: var(--text-secondary);
  }

  .project-links {
    display: flex;
    gap: 1.5rem;
    font-size: 0.9375rem;
  }

  /* Contact Section */
  .contact-link {
    display: inline-block;
    font-size: 1.25rem;
    margin-top: 2rem;
  }

  /* Empty State */
  .empty-state {
    padding: 3rem;
    text-align: center;
    border: 1px dashed var(--border-default);
    border-radius: 4px;
    color: var(--text-secondary);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .page-container {
      padding: 2rem 1.5rem;
    }

    .section {
      padding: 3rem 0;
    }

    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
