---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects'))
  .filter((project) => !project.data.draft)
  .sort((a, b) => a.data.order - b.data.order)
  .slice(0, 6); // Show top 6 projects on homepage
---

<Layout title="Your Name - Software Engineer">
  <div class="min-h-screen flex flex-col">
    <Header />

    <main class="flex-1">
      <!-- Hero Section -->
      <section class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-20 md:py-32">
        <div class="text-center">
          <h1 class="text-5xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-blue-500 to-purple-600 bg-clip-text text-transparent">
            Hi, I'm Your Name
          </h1>
          <p class="text-xl md:text-2xl text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto">
            Software Engineer building cool projects and sharing what I learn
          </p>
          <div class="flex gap-4 justify-center">
            <a
              href="#projects"
              class="px-6 py-3 bg-blue-500 hover:bg-blue-600 dark:bg-blue-600 dark:hover:bg-blue-700 text-white rounded-lg transition-colors font-medium"
            >
              View Projects
            </a>
            <a
              href="/blog"
              class="px-6 py-3 border border-gray-300 dark:border-gray-700 hover:border-blue-500 dark:hover:border-blue-500 rounded-lg transition-colors font-medium"
            >
              Read Blog
            </a>
          </div>
        </div>
      </section>

      <!-- About Section -->
      <section class="bg-gray-50 dark:bg-gray-800/50 py-20">
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
          <h2 class="text-3xl md:text-4xl font-bold mb-8 text-center">About Me</h2>
          <div class="max-w-3xl mx-auto">
            <p class="text-lg text-gray-600 dark:text-gray-400 mb-4">
              I'm a passionate software engineer who loves building things and solving problems.
              My interests span across web development, system design, and exploring new technologies.
            </p>
            <p class="text-lg text-gray-600 dark:text-gray-400 mb-4">
              When I'm not coding, you'll find me learning about new frameworks, contributing to
              open source, or writing about my experiences on this blog.
            </p>
            <p class="text-lg text-gray-600 dark:text-gray-400">
              I'm always open to interesting conversations and collaboration opportunities. Feel
              free to reach out!
            </p>
          </div>
        </div>
      </section>

      <!-- Projects Section -->
      <section id="projects" class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
        <div class="mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Featured Projects</h2>
          <p class="text-lg text-gray-600 dark:text-gray-400">
            A selection of side projects I've been working on
          </p>
        </div>

        {projects.length > 0 ? (
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {projects.map((project) => (
              <article class="border border-gray-200 dark:border-gray-800 rounded-lg p-6 hover:border-blue-500 dark:hover:border-blue-500 transition-colors">
                {project.data.image && (
                  <img
                    src={project.data.image}
                    alt={project.data.title}
                    class="w-full h-48 object-cover rounded-lg mb-4"
                  />
                )}
                <h3 class="text-xl font-bold mb-2">{project.data.title}</h3>
                <p class="text-gray-600 dark:text-gray-400 mb-4">
                  {project.data.description}
                </p>

                <!-- Tech Stack -->
                <div class="flex flex-wrap gap-2 mb-4">
                  {project.data.tech.map((tech: string) => (
                    <span class="px-2 py-1 text-xs bg-gray-100 dark:bg-gray-800 rounded">
                      {tech}
                    </span>
                  ))}
                </div>

                <!-- Links -->
                <div class="flex gap-4">
                  {project.data.demoUrl && (
                    <a
                      href={project.data.demoUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-blue-500 hover:text-blue-600 dark:hover:text-blue-400 font-medium text-sm"
                    >
                      View Demo →
                    </a>
                  )}
                  {project.data.githubUrl && (
                    <a
                      href={project.data.githubUrl}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-gray-100 font-medium text-sm"
                    >
                      GitHub →
                    </a>
                  )}
                </div>
              </article>
            ))}
          </div>
        ) : (
          <div class="text-center py-12 border border-dashed border-gray-300 dark:border-gray-700 rounded-lg">
            <p class="text-gray-600 dark:text-gray-400">
              No projects yet. Add your first project in <code class="bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded">src/content/projects/</code>
            </p>
          </div>
        )}
      </section>

      <!-- Contact Section -->
      <section id="contact" class="bg-gray-50 dark:bg-gray-800/50 py-20">
        <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Let's Connect</h2>
          <p class="text-lg text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto">
            I'm always interested in hearing about new opportunities, collaborations,
            or just having a chat about technology.
          </p>
          <a
            href="mailto:your.email@example.com"
            class="inline-flex items-center gap-2 px-8 py-4 bg-blue-500 hover:bg-blue-600 dark:bg-blue-600 dark:hover:bg-blue-700 text-white rounded-lg transition-colors text-lg font-medium"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Send me an email
          </a>
        </div>
      </section>
    </main>

    <Footer />
  </div>
</Layout>
