---
import Layout from '../../layouts/Layout.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const allPosts = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Blog - Your Name" description="Thoughts, tutorials, and insights about software engineering">
  <div class="blog-index">
    <header class="blog-header">
      <h1 class="blog-title">Writing</h1>
      <p class="blog-subtitle">
        Thoughts, tutorials, and insights about software engineering
      </p>
    </header>

    {allPosts.length > 0 ? (
      <div class="posts-list">
        {allPosts.map((post) => (
          <article class="post-item">
            <a href={`/blog/${post.slug}`} class="post-link">
              <h2 class="post-item-title">{post.data.title}</h2>
            </a>

            <div class="post-item-meta">
              <time datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString('en-US', {
                  year: 'numeric',
                  month: 'long',
                  day: 'numeric',
                })}
              </time>
              {post.data.tags.length > 0 && (
                <>
                  <span class="separator">·</span>
                  <div class="tags-inline">
                    {post.data.tags.map((tag) => (
                      <span>#{tag}</span>
                    ))}
                  </div>
                </>
              )}
            </div>

            <p class="post-item-description">
              {post.data.description}
            </p>

            <a href={`/blog/${post.slug}`} class="read-more">
              Read more →
            </a>
          </article>
        ))}
      </div>
    ) : (
      <div class="empty-state">
        <p>
          No blog posts yet. Add your first post in <code>src/content/blog/</code>
        </p>
      </div>
    )}

    <Footer />
  </div>
</Layout>

<style>
  .blog-index {
    max-width: 750px;
    margin: 0 auto;
    padding: 3rem 2rem;
  }

  .blog-header {
    margin-bottom: 4rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--border-default);
  }

  .blog-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .blog-subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
  }

  /* Posts List */
  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }

  .post-item {
    padding-bottom: 3rem;
    border-bottom: 1px solid var(--border-default);
  }

  .post-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .post-link {
    text-decoration: none;
  }

  .post-item-title {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
    transition: color 0.2s ease;
  }

  .post-link:hover .post-item-title {
    color: var(--accent-primary);
  }

  .post-item-meta {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
    font-size: 0.9375rem;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }

  .post-item-meta .separator {
    color: var(--text-muted);
  }

  .tags-inline {
    display: flex;
    gap: 0.75rem;
  }

  .tags-inline span {
    color: var(--accent-primary);
  }

  .post-item-description {
    color: var(--text-secondary);
    line-height: 1.75;
    margin-bottom: 1rem;
  }

  .read-more {
    font-size: 0.9375rem;
  }

  /* Empty State */
  .empty-state {
    padding: 3rem;
    text-align: center;
    border: 1px dashed var(--border-default);
    border-radius: 4px;
    color: var(--text-secondary);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-index {
      padding: 2rem 1.5rem;
    }

    .blog-header {
      margin-bottom: 3rem;
    }

    .blog-title {
      font-size: 2rem;
    }

    .blog-subtitle {
      font-size: 1.125rem;
    }

    .post-item-title {
      font-size: 1.5rem;
    }

    .posts-list {
      gap: 2.5rem;
    }

    .post-item {
      padding-bottom: 2.5rem;
    }
  }
</style>
