---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { getCollection } from 'astro:content';

const allPosts = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime());
---

<Layout title="Blog - Your Name" description="Thoughts, tutorials, and insights about software engineering">
  <div class="min-h-screen flex flex-col">
    <Header />

    <main class="flex-1">
      <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
        <header class="mb-12">
          <h1 class="text-4xl md:text-5xl font-bold mb-4">Blog</h1>
          <p class="text-lg text-gray-600 dark:text-gray-400">
            Thoughts, tutorials, and insights about software engineering
          </p>
        </header>

        {allPosts.length > 0 ? (
          <div class="space-y-8">
            {allPosts.map((post) => (
              <article class="border-b border-gray-200 dark:border-gray-800 pb-8 last:border-0">
                <a href={`/blog/${post.slug}`} class="group">
                  <h2 class="text-2xl md:text-3xl font-bold mb-2 group-hover:text-blue-500 dark:group-hover:text-blue-400 transition-colors">
                    {post.data.title}
                  </h2>
                </a>

                <div class="flex flex-wrap items-center gap-3 text-sm text-gray-600 dark:text-gray-400 mb-3">
                  <time datetime={post.data.date.toISOString()}>
                    {post.data.date.toLocaleDateString('en-US', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric',
                    })}
                  </time>
                  {post.data.tags.length > 0 && (
                    <>
                      <span>â€¢</span>
                      <div class="flex gap-2">
                        {post.data.tags.map((tag) => (
                          <span class="text-blue-500 dark:text-blue-400">#{tag}</span>
                        ))}
                      </div>
                    </>
                  )}
                </div>

                <p class="text-gray-600 dark:text-gray-400 mb-4">
                  {post.data.description}
                </p>

                <a
                  href={`/blog/${post.slug}`}
                  class="inline-flex items-center gap-2 text-blue-500 hover:text-blue-600 dark:hover:text-blue-400 font-medium"
                >
                  Read more
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                  </svg>
                </a>
              </article>
            ))}
          </div>
        ) : (
          <div class="text-center py-12 border border-dashed border-gray-300 dark:border-gray-700 rounded-lg">
            <p class="text-gray-600 dark:text-gray-400">
              No blog posts yet. Add your first post in <code class="bg-gray-100 dark:bg-gray-800 px-2 py-1 rounded">src/content/blog/</code>
            </p>
          </div>
        )}
      </div>
    </main>

    <Footer />
  </div>
</Layout>
